{% extends "../../../partials/layout.njk" %}

{% set pageTitle = "Add a note to this review" %}

{% set pageId = "review-plan-review-note" %}

{% block beforeContent %}
  {{ govukBackLink({ text: 'Back', href: '/plan/' + prisonerSummary.prisonNumber + '/review' }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form class="form" method="post" novalidate="">
        <div class="govuk-form-group">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

          {{ govukTextarea({
            name: "notes",
            id: "notes",
            value: form.notes,
            label: {
              text: "Add a note to this review",
              classes: "govuk-label--l",
              isPageHeading: true
            },
            hint: {
              text: "This note will not be sent to case notes"
            }
          }) }}

        </div>

        {{ govukButton({
          id: "submit-button",
          text: "Continue",
          type: "submit",
          attributes: {"data-qa": "submit-button"}
        }) }}
      </form>

    </div>
  </div>
{% endblock %}
