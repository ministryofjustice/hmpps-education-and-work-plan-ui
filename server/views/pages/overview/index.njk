{% extends "../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Home" %}

{% set pageId = "overview" %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Digital Prison Services",
        href: dpsUrl
      },
      {
        text: "Manage learning and work progress",
        href: "/"
      }
    ],
    classes: 'govuk-!-display-none-print'
  }) }}
{% endblock %}

{% block content %}

  {% include "../../partials/prisonerBanner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Learning and work progress</span>
      <h1 class="govuk-heading-l">{{ prisonerSummary.firstName }} {{ prisonerSummary.lastName }}'s learning and work progress</h1>
    </div>
    <div class="govuk-grid-column-one-third">
      {% include "../../partials/printThisPage.njk" %}
    </div>
  </div>

  {% include './partials/navigation.njk' %}

  {% if tab === 'overview' %}
    {% include './partials/overviewTabContents.njk' %}
  {% endif %}
  {% if tab === 'support-needs' %}
    {% include './partials/supportNeedsTabContents.njk' %}
  {% endif %}
  {% if tab === 'education-and-training' %}
    {% include './partials/educationAndTrainingTabContents.njk' %}
  {% endif %}
  {% if tab === 'work-and-interests' %}
    {% include './partials/workAndInterestsTabContents.njk' %}
  {% endif %}

{% endblock %}
