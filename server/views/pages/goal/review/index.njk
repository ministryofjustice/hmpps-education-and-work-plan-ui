{% extends "../../../partials/layout.njk" %}

{% set pageId = "review" %}
{% set pageTitle = "Review prisoner's goals" %}

{% block beforeContent %}
  {% include "../../../partials/breadcrumb.njk" %}
{% endblock %}

{% block content %}

  {% include "../../../partials/prisonerBanner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Review {{ prisonerSummary.firstName }} {{ prisonerSummary.lastName }}'s goals</h1>

      {% for goal in goals %}
      <div class="govuk-summary-card">
        <div class="govuk-summary-card__title-wrapper">
          <h2 class="govuk-summary-card__title">Goal {{ loop.index }}</h2>
        </div>
        <div class="govuk-summary-card__content">
          <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Description
              </dt>
              <dd class="govuk-summary-list__value" data-qa="goal-{{ loop.index }}-description-value">
                {{ goal.title }}
              </dd>
              {% if featureToggles.newCreateGoalRoutesEnabled %}
              <dd class="govuk-summary-list__actions">
                <a class="govuk-link" href="/plan/{{ prisonerSummary.prisonNumber }}/goals/{{ loop.index }}/create?mode=edit" data-qa="change-goal-{{ loop.index }}-description">
                  Change<span class="govuk-visually-hidden"> description for goal {{ loop.index }}</span>
                </a>
              </dd>
              {% endif %}
            </div>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                When are they aiming to achieve this by?
              </dt>
              <dd class="govuk-summary-list__value" data-qa="goal-{{ loop.index }}-target-date-value">
                by {{ goal.targetCompletionDate | formatDate('D MMMM YYYY') }}
              </dd>
              {% if featureToggles.newCreateGoalRoutesEnabled %}
              <dd class="govuk-summary-list__actions">
                <a class="govuk-link" href="/plan/{{ prisonerSummary.prisonNumber }}/goals/{{ loop.index }}/create?mode=edit" data-qa="change-goal-{{ loop.index }}-target-date">
                  Change<span class="govuk-visually-hidden"> when are they aiming to achieve this by for goal {{ loop.index }}</span>
                </a>
              </dd>
              {% endif %}
            </div>
            {% for step in goal.steps %}
              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                  Step {{ step.sequenceNumber }}
                </dt>
                <dd class="govuk-summary-list__value">
                  {{ step.title }}
                </dd>
                {% if featureToggles.newCreateGoalRoutesEnabled %}
                <dd class="govuk-summary-list__actions">
                  <a class="govuk-link" href="/plan/{{ prisonerSummary.prisonNumber }}/goals/{{ loop.index }}/add-step/{{ step.sequenceNumber }}?mode=edit" data-q="change-goal-{{ loop.index }}-step-{{ step.sequenceNumber }}">
                    Change<span class="govuk-visually-hidden"> goal {{ goal.title }} step {{ step.sequenceNumber }} step title</span>
                  </a>
                </dd>
                {% endif %}
              </div>
            {% endfor %}
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                Note
              </dt>
              <dd class="govuk-summary-list__value">
                {{ goal.note }}
              </dd>
            </div>
          </dl>
        </div>
      </div>
      {% endfor %}

      <form class="form" method="post" novalidate="">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

          <div class="govuk-form-group">
            {{ govukButton({
              id: "add-another-goal-button",
              name: "action",
              value: "add-another-goal",
              text: "Add another goal",
              classes: "govuk-button--secondary"
            }) }}
          </div>

          {{ govukButton({
            id: "submit-button",
            name: "submit-button",
            value: "submit-form",
            text: "Save to learning and work progress plan"
          }) }}

      </form>

    </div>
  </div>
{% endblock %}
